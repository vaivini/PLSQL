SELECT DISTINCT PCDESCONTOI.CODIGO,
     CASE  PCDESCONTOC.TIPOCAMPANHA WHEN 'MIQ' THEN 'MIX POR INTERVALO DE QUANTIDADE' WHEN 'MQT' THEN 'MIX POR QUANTIDADE MINIMA' end as TIPO_CAMPANHA,
       PCDESCONTOI.CODPROD,
       PCPRODUT.DESCRICAO,
      PCPRODUT.EMBALAGEM,
      PCPRODUT.CODAUXILIAR,
       PCDESCONTOI.QTMINIMA,
       PCDESCONTOI.QTMAXIMA,
       PCDESCONTOI.PERDESC DESCONTO,
       PCPRODUT.UNIDADE,
     
        (PKG_ESTOQUE.ESTOQUE_DISPONIVEL(PCEST.CODPROD, PCEST.CODFILIAL, 'V'))     SALDOESTOQUE,
       PCDESCONTOI.TIPODESCONTO
  FROM PCDESCONTOI, PCDESCONTOC, PCPRODUT, PCEST
 WHERE PCDESCONTOC.CODIGO = PCDESCONTOI.CODIGO
 AND PCDESCONTOI.CODPROD = PCPRODUT.CODPROD
 AND PCDESCONTOC.DTFIM >= SYSDATE
 AND PCPRODUT.CODPROD = PCEST.CODPROD
 AND PCPRODUT.CODPROD = 15250
 AND PCEST.CODFILIAL = PCDESCONTOC.CODFILIAL
 AND PCEST.CODFILIAL = '1' 
 ORDER BY TIPO_CAMPANHA,  PCPRODUT.DESCRICAO
